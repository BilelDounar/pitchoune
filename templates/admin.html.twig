<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# meta #}
                <link rel="icon" href="{{ asset('asset/img/logo_carre.png') }}" type="image/png">
        {{ encore_entry_link_tags('admin') }}
        {% block stylesheets %}
         <link rel="stylesheet" href="{{ asset('styles/admin.scss') }}">
         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% endblock %}
        
    </head>
    <body>

<header>
        <nav id="burger-menu">
            <i class="fa-solid fa-xmark close-burger"></i>
            <ul>
                <a class="button nav_button" href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-user"></i> Profil</a>
                <a class="button nav_button" href="{{ path('app_logout') }}"><i class="fa-solid fa-right-from-bracket"></i> Déconnexion</a>
                <a class="button nav_button" href="{{ path('app_admin') }}"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
                <hr>
                <li><a class="liste" href="{{ path('app') }}">Accueil</a></li>
                <li><a class="liste" href="{{ path('app_contact') }}">Contact</a></li>
                <li><a class="liste" href="{{ path('app_mentions') }}">Mentions Légales</a></li>
                <li><a class="liste" href="{{ path('app_faq') }}">F.A.Q</a></li>
            </ul>
        </nav>
        <nav class="desktop">
            <a class="logo" href="{{ path('app') }}"><img class="logo" src="{{ asset('asset/img/logo.png') }}" alt="Logo"></a>
            <a class="burger" href="#"><i class="fa-solid fa-bars"></i></a>
            <ul class="nav_list"> 
                <li><a class="liste" href="{{ path('app') }}">Accueil</a></li>
                <li><a class="liste" href="{{ path('app_contact') }}">Contact</a></li>
                <li><a class="liste" href="{{ path('app_mentions') }}">Mentions Légales</a></li>
                <li><a class="liste" href="{{ path('app_faq') }}">F.A.Q</a></li>  
            </ul>
        </nav>
        
    </header>

        {% block body %}{% endblock %}


        {{ encore_entry_script_tags('admin') }}
        {% block javascripts %}{% endblock %}
    </body>
</html>
