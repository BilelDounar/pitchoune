		<h1>Utilisateur :</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>

				<tr>
					<th>Nom</th>
					<td>{{ user.nom }}</td>
