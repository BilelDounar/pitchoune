{% extends 'base.html.twig' %}

{% block title %}Hello contact!{% endblock %}

{% block body %}


    <section id="contact">
        <div class="wrap">
            <div class="top">
                <h1>NOUS CONTACTEZ</h1>
            </div>
            <div class="down">
{#                {{ form_errors(contactForm) }}#}
                {{ form_start(form) }}
                <div class="nom_prenom">
                    <div class="form-group">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                        {% if form_errors(form.nom) %}
                            <span class="error">{{ form_errors(form.nom) }}</span>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Pr√©nom'}}) }}
                        {% if form_errors(form.prenom) %}
                            <span class="error">{{ form_errors(form.prenom) }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    {% if form_errors(form.email) %}
                        <span class="error">{{ form_errors(form.email) }}</span>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Message...'}}) }}
                    {% if form_errors(form.message) %}
                        <span class="error">{{ form_errors(form.message) }}</span>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-primary">Envoyer</button>
                {{ form_end(form) }}

            </div>
        </div>
    </section>


{% endblock %}
