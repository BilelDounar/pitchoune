{% block title %}ContactCreche{% endblock %}

{% block body %}

    <section id="singlemsg">
        <div class="wrap">
            <h1>Message :</h1>

            <div class="singlemsg">
                <div class="top">
                    <p>{{ contact_creche.createdAt ? contact_creche.createdAt|date('H : i') : '' }}</p>
                    <p>{{ contact_creche.createdAt ? contact_creche.createdAt|date('m/d') : '' }}</p>
                </div>
                <h2>{{ contact_creche.nom }}
                    {{ contact_creche.prenom }}</h2>
