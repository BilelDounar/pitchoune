                <p>{{ contact_creche.message }}</p>
            </div>
            <div class="bouton">
                <a class="edit" href="{{ path('app_contact_creche_index') }}">retour a la liste</a>
                {{ include('contact_creche/_delete_form.html.twig') }}
            </div>

        </div>

    </section>
{% endblock %}
