{% extends 'admin.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <section id="singlemsg" class="wrap">
        <h1>Message :</h1>

        <div class="singlemsg">
            <div class="top">
                <p>{{ contact.createdAt ? contact.createdAt|date('H : i') : '' }}</p>
                <p>{{ contact.createdAt ? contact.createdAt|date('m/d') : '' }}</p>
            </div>
            <h2>{{ contact.nom }} {{ contact.prenom }}</h2>
            <h3>{{ contact.email }}</h3>
            <p>{{ contact.message }}</p>
        </div>
        <div class="bouton">
            <a class="edit" href="{{ path('app_messagerie_index') }}">retour a la liste</a>
            {{ include('messagerie/_delete_form.html.twig') }}
        </div>



    </section>

{% endblock %}
