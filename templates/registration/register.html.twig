{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<section id="register">
		<div class="wrap">
			<div class="top">
				<h1>Inscription</h1>
				<p>Vous devez vous inscrire pour continuer
				</p>
			</div>
			<div class="down">

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm) }}

				{{ form_label(registrationForm.roless, 'Choix du role :') }}
				{{ form_widget(registrationForm.roless, {
    'attr': {'class': 'form-control', }
}) }}

				<div class="a">

					{{ form_widget(registrationForm.nom, {
                    'attr': {'placeholder': 'Nom'}
                }) }}

					{{ form_widget(registrationForm.prenom, {
                    'attr': {'placeholder': 'Pr√©nom'}
                }) }}

				</div>

				<div class="b">

					{{ form_widget(registrationForm.adresse, {
                    'attr': {'placeholder': 'Adresse'}
                }) }}

					{{ form_widget(registrationForm.ZIP, {
                    'attr': {'placeholder': 'Code Postal'}
                }) }}

				</div>

				<div class="email">

					{{ form_widget(registrationForm.email, {
                    'attr': {'placeholder': 'Email'}
                }) }}

				</div>

				<div class="pass">

					{{ form_widget(registrationForm.plainPassword, {
                    'attr': {'placeholder': 'Mot de passe'},
                    'label': 'Password'
                }) }}
				</div>

				<div class="condition">
				{{ form_label(registrationForm.agreeTerms, 'Accepter les conditions') }}
				{{ form_widget(registrationForm.agreeTerms, {
    'attr': {'class': 'form-control', 'placeholder': 'Accepter les conditions'}
}) }}
</div>



				<button type="submit" class="btn">Inscription</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>

{% endblock %}
