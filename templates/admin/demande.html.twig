{% extends 'admin.html.twig' %}

{% block title %}Pro en attente{% endblock %}

{% block body %}

                <h1>AddCreche index</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Siret</th>
                        <th>Tarif</th>
                        <th>Max enfant</th>
                        <th>Adresse</th>
                        <th>Email</th>
                        <th>Telephone</th>
                        <th>Status</th>
                        <th>Created_at</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for add_creche in add_creches %}
                        <tr>
                            <td>{{ add_creche.nom }}</td>
                            <td>{{ add_creche.siret }}</td>
                            <td>{{ add_creche.tarif }}</td>
                            <td>{{ add_creche.maxEnfant }}</td>
                            <td>{{ add_creche.adresse }}</td>
                            <td>{{ add_creche.email }}</td>
                            <td>{{ add_creche.telephone }}</td>
                            <td>{{ add_creche.status }}</td>
                            <td>{{ add_creche.createdAt ? add_creche.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="14">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


{% endblock %}
